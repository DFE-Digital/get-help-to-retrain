<% content_for :breadcrumb do
    generate_breadcrumbs(
      [
        [t('breadcrumb.task_list_home'), task_list_path],
        [t('breadcrumb.courses_near_me'), find_training_courses_path]
      ]
    )
  end
%>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl govuk-!-margin-top-6"><%= params[:id].titleize %> courses near me</h1>
    <div class="govuk-grid-column-full govuk-!-padding-0">
      <%= render partial: 'course', collection: @courses %>   
    </div>
  </div>

  <div class="govuk-grid-column-one-third govuk-!-margin-top-6">
    <div class="govuk-related-items govuk-!-padding-bottom-6 top-border__container">
      <h2 class="govuk-heading-m"><%= t('contact_us.title') %></h2>
      <p class="govuk-body-m">
        <%= t('contact_us.body') %> <%= link_to t('contact_us.telephone'), t('contact_us.telephone_link'), class: 'govuk-!-padding-left-1 govuk-link' %>
      </p>
      <p class="govuk-body-m govuk-!-margin-bottom-0"><%= t('contact_us.telephone_times') %></p>
    </div>
    
    <div class="govuk-related-items govuk-!-padding-bottom-4 top-border__container">
      <h2 class="govuk-heading-m"><%= t('what_you_can_do_next.title') %></h2>
      <p class="govuk-body-m">
        <%= link_to t('what_you_can_do_next.body'), next_steps_path, class: 'govuk-link' %>
      </p>
    </div>

    <div class="govuk-related-items govuk-!-padding-bottom-4 top-border__container">
      <h2 class="govuk-heading-m"><%= t('help_improve_this_service.title') %></h2>
      <p class="govuk-body-m">
        <%= link_to t('help_improve_this_service.body'), next_steps_path, class: 'govuk-link' %>
      </p>
    </div>
  </div>
</div>
