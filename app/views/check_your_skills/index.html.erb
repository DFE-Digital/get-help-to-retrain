<% page_title :check_your_skills_index %>
<% content_for :breadcrumb do
    generate_breadcrumbs(
      t('breadcrumb.check_your_skills'),
      [
        [t('breadcrumb.task_list_home'), task_list_path]
      ]
    )
  end
%>

<div class="govuk-grid-row govuk-!-margin-top-7">
  <div class="govuk-grid-column-two-thirds" >
    <% if Flipflop.skills_builder_v2? && user_session.job_profile_skills? %>
      <%= render "shared/search/form", search_path: check_your_skills_path, scope: 'check_your_skills.index.additional_skills' %>
    <% else %>
      <%= render "shared/search/form", search_path: check_your_skills_path, scope: 'check_your_skills.index' %>
    <% end %>
  </div>
  <%= render "shared/contact_us" %>
  <% if Flipflop.skills_builder_v2? && user_session.job_profile_skills? %>
    <%= render "shared/save_your_results"  %>
  <% else %>
    <%= render 'shared/return_to_saved_results' %>
  <% end %>
</div>
