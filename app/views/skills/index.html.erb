<% page_title :skills_index %>
<% content_for :breadcrumb do
    generate_breadcrumbs(
      t('breadcrumb.your_skills'),
      [
        [t('breadcrumb.task_list_home'), task_list_path],
        [t('breadcrumb.check_your_skills'), check_your_skills_path],
        [t('breadcrumb.search_results'), results_check_your_skills_path(name: params[:check_your_skills_result])]
      ]
    )
  end
%>

<div class="govuk-grid-row govuk-!-margin-top-7 govuk-body">
  <div class="govuk-grid-column-two-thirds">
    <span class="govuk-caption-xl">Your current skills</span>
    <h1 class="govuk-heading-xl govuk-!-margin-bottom-3" ><%= @job_profile.hero_copy %></h1>
    <% @job_profile.additional_hero_copy.each do |paragraph| %>
      <p class="govuk-body-l"><%= paragraph %></p>
    <% end %>
    <h2 class="govuk-heading-m">Skills you may have:</h2>
    <%= render 'skills_list' %>
    <%= link_to('Explore jobs you could do', explore_occupations_path, class: 'govuk-button') %>
  </div>

  <%= render 'shared/contact_us' %>
</div>
