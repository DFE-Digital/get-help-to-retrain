<% page_title :skills_index %>
<% content_for :breadcrumb do
    generate_breadcrumbs(
      t('breadcrumb.your_skills'),
      [
        [t('breadcrumb.home'), root_path],
        [t('breadcrumb.task_list'), task_list_path],
      ]
    )
  end
%>

<div class="govuk-grid-row govuk-!-margin-top-7 govuk-body">
  <div class="govuk-grid-column-two-thirds">
    <div class="govuk-grid-column-full govuk-!-padding-0">
      <h1 class="govuk-heading-xl">Youâ€™ve selected skills from the following jobs</h1>
      <% if flash[:notice].present? %>
        <div role="alert" class="banner-info" aria-atomic="true" >
          <p class="banner-info-message"><%= flash[:notice] %></p>
        </div>
      <% end %>
      <% if @job_profiles_with_skills.any? %>
        <%= render 'skills/job_profiles_with_skills', job_profiles_with_skills: @job_profiles_with_skills %>
      <% else %>
        <p class='govuk-body'>You have not selected any skills. You need to select at least one skill to get your job matches and action plan.</p>
        <p class='govuk-body'>Tell us a job you have done so we can check which skills you have.</p>
        <div class="govuk-!-margin-bottom-2">
          <%= link_to('Check my skills', check_your_skills_path, class: 'govuk-link') %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="govuk-grid-column-one-third">
    <%= render 'shared/contact_us' %>
    <%= render 'shared/save_or_return_to_your_results' %>
  </div>
</div>
