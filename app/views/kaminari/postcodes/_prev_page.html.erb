<li class="pagination__item  pagination__item--prev">
  <%= form_with local: true, url: @pagination_path do %>
    <%= hidden_field_tag('postcode', @postcode) %>
    <%= hidden_field_tag('page', current_page - 1) %>
    <a class='pagination__link'><%= submit_tag(t('pagination.previous').html_safe) %></a>
  <% end %>
</li>
