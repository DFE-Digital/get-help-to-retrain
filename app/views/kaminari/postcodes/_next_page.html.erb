<li class="pagination__item pagination__item--next">
  <%= form_with local: true, url: @pagination_path do %>
    <%= hidden_field_tag('postcode', @postcode) %>
    <%= hidden_field_tag('page', current_page + 1) %>
    <a class='pagination__link'><%= submit_tag(t('pagination.next').html_safe) %></a>
  <% end %>
</li>
