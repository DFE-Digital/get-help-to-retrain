<% page_title :job_profiles_show %>
<% content_for :breadcrumb do
    generate_breadcrumbs(
      t('breadcrumb.job_profile'),
      [
        [t('breadcrumb.task_list_home'), task_list_path],
        [t('breadcrumb.job_matches'), skills_matcher_index_path],
      ]
    )
  end
%>

<div class="govuk-grid-row govuk-!-margin-top-7 govuk-body">
  <div class="govuk-grid-column-two-thirds">
    <div class="govuk-grid-column-full govuk-!-padding-0">
      <%= render 'brief' %>
      <hr class="govuk-section-break govuk-section-break--visible govuk-!-margin-top-5 govuk-!-margin-bottom-5">
    </div>
    <%= render 'highlights' %>
    <div class="govuk-grid-column-full govuk-!-padding-0 extended-container">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <%= render 'relevant_sections' %>
        </div>
      </div>
    </div>
  </div>
  <%= render 'shared/contact_us' %>
  <%= render 'shared/save_or_return_to_your_results' %>
</div>
