<% content_for :breadcrumb do
    generate_breadcrumbs(
      @job_profile.hero_copy,
      [
        [t('breadcrumb.home'), root_path],
        [t('breadcrumb.task_list'), task_list_path],
        [t('breadcrumb.explore_occupations'), explore_occupations_path],
        [t('breadcrumb.search_results'), results_explore_occupations_path]
      ]
    )
  end
%>

<div class="govuk-grid-row govuk-!-margin-top-7">
  <div class="govuk-grid-column-two-thirds">
    <%= render partial: 'brief' %>
    <%= render partial: 'highlights' %>
    <div class="govuk-grid-column-full">
      <%= render partial: 'relevant_sections' %>
      <%= link_to('Continue', task_list_path, class: 'govuk-button govuk-!-margin-top-6  govuk-!-margin-bottom-9') %>
    </div>
  </div>

  <%= render partial: 'shared/contact_us' %>
</div>
