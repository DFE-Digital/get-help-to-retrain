<% page_title :link_sent %>
<% content_for :breadcrumb do
    generate_breadcrumbs(
      t('breadcrumb.link_sent'),
      [
        [t('breadcrumb.home'), root_path]
      ]
    )
  end
%>
<div class="govuk-grid-row govuk-!-margin-top-7">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl"><%= t('.title') %></h1>
    <p class="govuk-body">We've sent an email to</p>
    <h3 class="govuk-heading-m"><%= params[:email] %></h3>
    <p class="govuk-body">This email contains a link that will take you back to any progress youâ€™ve saved.</p>
    <p class="govuk-body">The link expires after one hour.</p>
    <%= form_with local: true, url: link_sent_again_path do |form| %>
      <%= hidden_field_tag('email', @user.email) %>
      <p class="govuk-body">If you haven't received this email you can <%= submit_tag('send it again', class: 'unbutton govuk-body govuk-link') %>.</p>
    <% end %>
    <p class="govuk-body">You'll only be able to return to your progress if you previously saved your progress in this service. If you haven't saved any progress, you won't receive an email.</p>
  </div>
  <div class="govuk-grid-column-one-third">
    <%= render "shared/contact_us" %>
  </div>
</div>
