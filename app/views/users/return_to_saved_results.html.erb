<% page_title :return_to_saved_results %>
<%= back_link(paths_to_ignore: [link_sent_again_path]) %>

<div class="govuk-grid-row govuk-!-margin-top-7">
  <div class="govuk-grid-column-two-thirds">
    <%= error_summary(@user) %>
    <h1 class="govuk-heading-xl"><%= t('return_to_saved_results.title') %></h1>
    <p class="govuk-body">If you’ve already used this service before and saved your progress, enter your email address. We’ll send you a link you can use to return to any progress you’ve saved.</p>
    <p class="govuk-body">The link expires after one hour.</p>
    <%= form_with model: @user, local: true, url: return_to_saved_results_path do |form| %>
      <%= form_group_tag @user, :email do %>
        <%= form.label :email, class: 'govuk-label', for: 'email' %>
        <%= errors_tag @user, :email %>
        <%= text_field_tag(:email, params.fetch(:email, nil), class: css_classes_for_input(@user, :email, "govuk-input govuk-!-width-two-thirds"), autocomplete: 'email') %>
      <% end %>
      <%= button_tag('Send link', class: 'govuk-button', name: nil, data: { module: 'govuk-button' }, aria: { label: 'Send a link to my Email address to access my saved progress' }) %>
    <% end %>
  </div>
  <div class="govuk-grid-column-one-third">
    <%= render "shared/contact_us" %>
  </div>
</div>
