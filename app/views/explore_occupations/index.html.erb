<% page_title :explore_occupations_index %>
<% content_for :breadcrumb do
    generate_breadcrumbs(
      t('breadcrumb.explore_occupations'),
      [
        [t('breadcrumb.task_list_home'), task_list_path]
      ]
    )
  end
%>

<div class="govuk-grid-row govuk-!-margin-top-2">
  <div class="govuk-grid-column-two-thirds">
    <%= render "shared/search/form", search_path: results_explore_occupations_path, scope: 'explore_occupations.index' %>
    <h2 class="govuk-heading-m govuk-!-padding-left-3">Explore by job category</h2>
    <ul class="govuk-list column-list govuk-!-padding-left-3">
      <% @categories.each do |category| %>
        <li class="govuk-!-padding-top-1 column-list-item">
          <h4 class="govuk-!-margin-0">
            <%= link_to category.name, category_path(category.slug), class: 'govuk-link' %>
          </h4>
        </li>
      <% end %>
    </ul>
  </div>
  <%= render "shared/contact_us" %>
</div>
