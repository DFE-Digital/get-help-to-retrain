{
  "name": "get_help_to_retrain",
  "scripts": {
    "postdeploy": "pg_dump $DEV_DATABASE_URL | psql $DATABASE_URL && bundle exec rails db:migrate"
  },
  "env": {
    "SPLIT_API_KEY": {
      "required": true
    },
    "USER_FEEDBACK_SMART_SURVEY_LINK": {
      "required": true
    },
	  "DEV_DATABASE_URL": {
	    "required": true
	  },
    "LANG": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    },
    "NOTIFY_API_KEY": {
      "required": true
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
